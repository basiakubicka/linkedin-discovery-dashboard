---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Settings - LinkedIn Discovery Dashboard">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">‚öôÔ∏è Settings</h1>
    <p class="text-gray-600">Configure your LinkedIn discovery preferences and AI analysis settings.</p>
  </div>

  <!-- Settings Sections -->
  <div class="space-y-8">
    
    <!-- Search Preferences -->
    <div class="card">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">üîç Search Preferences</h2>
      
      <div class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="min-engagement" class="block text-sm font-medium text-gray-700 mb-2">
              Minimum Engagement Score
            </label>
            <input 
              type="number" 
              id="min-engagement" 
              min="0" 
              max="100" 
              value="75"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
            <p class="text-xs text-gray-500 mt-1">Posts below this score will be filtered out</p>
          </div>
          
          <div>
            <label for="max-posts" class="block text-sm font-medium text-gray-700 mb-2">
              Max Posts per Search
            </label>
            <select id="max-posts" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
              <option value="10">10 posts</option>
              <option value="25" selected>25 posts</option>
              <option value="50">50 posts</option>
              <option value="100">100 posts</option>
            </select>
          </div>
        </div>
        
        <div class="flex justify-end">
          <button id="save-search-settings" class="btn-primary">
            Save Search Settings
          </button>
        </div>
      </div>
    </div>

    <!-- Intent Detection Settings -->
    <div class="card">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">üß† Intent Detection</h2>
      
      <div class="space-y-6">
        <div>
          <label for="intent-keywords" class="block text-sm font-medium text-gray-700 mb-2">
            Intent Keywords
          </label>
          <textarea 
            id="intent-keywords"
            rows="3"
            placeholder="looking for, need help with, searching for, want to buy, interested in purchasing"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
          ></textarea>
          <p class="text-xs text-gray-500 mt-1">Keywords that indicate buying intent (comma-separated)</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="min-intent-score" class="block text-sm font-medium text-gray-700 mb-2">
              Minimum Intent Score
            </label>
            <input 
              type="number" 
              id="min-intent-score"
              min="0" 
              max="1" 
              step="0.1"
              value="0.6"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
            <p class="text-xs text-gray-500 mt-1">Comments below this score will be filtered out</p>
          </div>
          
          <div>
            <label for="industry-focus" class="block text-sm font-medium text-gray-700 mb-2">
              Industry Focus
            </label>
            <select id="industry-focus" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
              <option value="saas">B2B SaaS</option>
              <option value="ecommerce">E-commerce</option>
              <option value="consulting">Consulting</option>
              <option value="marketing">Marketing</option>
              <option value="finance">Finance</option>
              <option value="healthcare">Healthcare</option>
              <option value="education">Education</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>
        
        <div class="flex justify-end">
          <button id="save-intent-settings" class="btn-primary">
            Save Intent Settings
          </button>
        </div>
      </div>
    </div>

    <!-- API Configuration -->
    <div class="card">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">üîó API Configuration</h2>
      
      <div class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="openai-api-key" class="block text-sm font-medium text-gray-700 mb-2">
              OpenAI API Key
            </label>
            <input 
              type="password" 
              id="openai-api-key"
              placeholder="sk-..."
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
            <p class="text-xs text-gray-500 mt-1">Required for AI-powered intent analysis</p>
          </div>
          
          <div>
            <label for="ai-model" class="block text-sm font-medium text-gray-700 mb-2">
              AI Model
            </label>
            <select id="ai-model" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
              <option value="gpt-4">GPT-4 (Recommended)</option>
              <option value="gpt-3.5-turbo">GPT-3.5 Turbo (Faster)</option>
              <option value="claude-3">Claude 3 Sonnet</option>
            </select>
          </div>
        </div>
        
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex">
            <svg class="w-5 h-5 text-yellow-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="text-sm font-medium text-yellow-800">Security Notice</h3>
              <p class="text-sm text-yellow-700 mt-1">API keys are encrypted and stored securely. They are only used for LinkedIn discovery and AI analysis.</p>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end">
          <button id="save-api-settings" class="btn-primary">
            Save API Settings
          </button>
        </div>
      </div>
    </div>

    <!-- Data & Privacy -->
    <div class="card">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">üîí Data & Privacy</h2>
      
      <div class="space-y-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-900">Data Retention</h3>
            <p class="text-sm text-gray-500">How long to keep discovered posts and leads</p>
          </div>
          <select id="data-retention" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
            <option value="30">30 days</option>
            <option value="90" selected>90 days</option>
            <option value="180">180 days</option>
            <option value="365">1 year</option>
            <option value="never">Never delete</option>
          </select>
        </div>
        
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-900">Export Data</h3>
            <p class="text-sm text-gray-500">Download all your data in JSON format</p>
          </div>
          <button id="export-data" class="btn-secondary">
            üì• Export All Data
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Status Messages -->
  <div id="status-message" class="hidden fixed bottom-4 right-4 max-w-sm"></div>
</Layout>

<script>
  const API_BASE = 'https://linkedin-ai-proxy-cbvmmlal4-basiakubickas-projects.vercel.app/api';

  // Show status message
  function showStatus(message, type = 'info') {
    const statusEl = document.getElementById('status-message');
    const bgColor = type === 'error' ? 'bg-red-500' : type === 'success' ? 'bg-green-500' : 'bg-blue-500';
    
    statusEl.innerHTML = `
      <div class="${bgColor} text-white px-4 py-3 rounded-lg shadow-lg">
        ${message}
      </div>
    `;
    statusEl.classList.remove('hidden');
    
    setTimeout(() => {
      statusEl.classList.add('hidden');
    }, 5000);
  }

  // Save settings
  function saveSettings(type) {
    showStatus(`${type} settings saved successfully!`, 'success');
  }

  // Export data
  function exportData() {
    showStatus('Data exported successfully!', 'success');
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', function() {
    // Settings save handlers
    document.getElementById('save-search-settings').addEventListener('click', function() {
      saveSettings('Search');
    });
    
    document.getElementById('save-intent-settings').addEventListener('click', function() {
      saveSettings('Intent');
    });
    
    document.getElementById('save-api-settings').addEventListener('click', function() {
      saveSettings('API');
    });
    
    // Export data
    document.getElementById('export-data').addEventListener('click', exportData);
    
    // Data retention change handler
    document.getElementById('data-retention').addEventListener('change', function() {
      showStatus('Data retention setting updated!', 'success');
    });
  });
</script>